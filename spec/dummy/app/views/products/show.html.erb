<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Images (<%= @product.images.count %>):</strong>
</p>

<ul>
<% @product.images.each do |img| %>
  <li>
  <%= image_tag img.path.thumb.url %>
  </li>
<% end %>
</ul>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
